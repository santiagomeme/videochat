rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }
  }
}


    // Reglas #2 para la colección de salas

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para la colección de salas
    match /salas/{roomId} {
      // Permitir lectura a cualquiera (monitores y observadores)
      allow read: if true;

      // Permitir escritura solo si está autenticado
      allow write: if request.auth != null;
    }

    // Puedes agregar más colecciones con sus propias reglas aquí
  }
}

